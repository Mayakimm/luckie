<div class="simple-calendar">
  <div class="calendar-heading">
    <h1><%= start_date.strftime("%B") %> summary</h1>
    <div class="move-calendar d-flex justify-content-between">
      <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view %>
      <%= link_to t('simple_calendar.next', default: '>>'), calendar.url_for_next_view %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="bg-transparent"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: "#{calendar.td_classes_for(day)} bg-white", style: "width: 70px !important; height: 70px;" do %>
              <div class= "bg-white d-flex justify-content-center align-items-center rounded-circle" style= "margin:0 auto; width: 50px; height: 50px;">
                  <span class="day-contentbg-white"><%= day.day %></span>
              </div>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>
